    "express": "^4.17.1",
    "mongoose": "^5.7.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.19",
    "@types/mongoose": "^5.5.22",
    "@types/node": "^12.11.1",
