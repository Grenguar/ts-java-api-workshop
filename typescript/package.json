{
  "name": "ts-java-api-workshop",
  "version": "1.0.0",
  "description": "Workshop for creating a simple API for your own TV series list.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "start": "tsc && node ./build/server.js",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon build/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run-script watch-ts\" \"npm run-script watch-node\""
